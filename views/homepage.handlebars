{{!-- views/home.handlebars --}}
{{> header}}
<h1>Homepage</h1>
{{#each posts}}
  <div class="post">
    <div class="post-header">
      <h2>{{this.title}}</h2>
      <small>Posted by {{this.user.username}} on {{format_date this.createdAt}}</small>
    </div>
    <p>{{this.content}}</p>
  </div>
{{/each}}
